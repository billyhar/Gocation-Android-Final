<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg">

    <VideoView
        android:id="@+id/loginVid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="153dp"
        android:padding="28dp"
        android:src="@drawable/gocation_logo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView"
        android:layout_marginTop="91dp" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_login"
        android:layout_width="241dp"
        android:layout_height="51dp"
        android:padding="34dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="23dp"
        android:background="@drawable/fb_login_btn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/loginVid"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_conversion_absoluteHeight="46dp"
        tools:layout_conversion_absoluteWidth="250dp"
        tools:layout_conversion_absoluteX="40dp"
        tools:layout_conversion_absoluteY="169dp"
        android:layout_marginBottom="155dp"
        android:layout_marginRight="5dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        android:textSize="14dp"



        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/terms_of_service"
        android:textColor="#f4442e"
        tools:layout_conversion_absoluteX="134dp"
        tools:layout_conversion_absoluteY="266dp"
        tools:layout_conversion_absoluteWidth="50dp"
        tools:layout_conversion_absoluteHeight="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="84dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        />





</android.support.constraint.ConstraintLayout>
